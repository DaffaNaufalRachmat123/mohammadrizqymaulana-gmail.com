<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenAccent">

    <ImageView
        android:id="@+id/imgLogoRewards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/logo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.starbucks.id.controller.extension.extendedView.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TM"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/greenPrimary"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="@+id/imgLogoRewards"
        app:layout_constraintEnd_toEndOf="@+id/imgLogoRewards"
        app:layout_constraintStart_toEndOf="@+id/imgLogoRewards"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoRewards" />
</androidx.constraintlayout.widget.ConstraintLayout>
