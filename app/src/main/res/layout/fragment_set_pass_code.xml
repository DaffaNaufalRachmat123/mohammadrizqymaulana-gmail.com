<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FLCRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->


    <com.starbucks.id.controller.extension.extendedView.CustomTextView
        android:id="@+id/txtDescPassCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Passcode will be required to open the Starbucks app."
        android:textColor="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EPC1" />

    <com.starbucks.id.controller.extension.extendedView.SingleEditText
        android:id="@+id/EPC1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/et_circle_shape"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:password="true"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescPassCode"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/EPC2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSet" />

    <com.starbucks.id.controller.extension.extendedView.SingleEditText
        android:id="@+id/EPC2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/et_circle_shape"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:password="true"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/EPC1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/EPC3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/EPC1"
        app:layout_constraintTop_toTopOf="@+id/EPC1" />

    <com.starbucks.id.controller.extension.extendedView.SingleEditText
        android:id="@+id/EPC3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/et_circle_shape"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:password="true"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/EPC1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/EPC4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/EPC2"
        app:layout_constraintTop_toTopOf="@+id/EPC1" />

    <com.starbucks.id.controller.extension.extendedView.SingleEditText
        android:id="@+id/EPC4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/et_circle_shape"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:password="true"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/EPC1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/EPC5"
        app:layout_constraintStart_toEndOf="@+id/EPC3"
        app:layout_constraintTop_toTopOf="@+id/EPC1" />

    <com.starbucks.id.controller.extension.extendedView.SingleEditText
        android:id="@+id/EPC5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/et_circle_shape"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:password="true"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/EPC1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/EPC6"
        app:layout_constraintStart_toEndOf="@+id/EPC4"
        app:layout_constraintTop_toTopOf="@+id/EPC1" />

    <com.starbucks.id.controller.extension.extendedView.SingleEditText
        android:id="@+id/EPC6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_circle_shape"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:password="true"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/EPC1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/EPC5"
        app:layout_constraintTop_toTopOf="@+id/EPC1" />


    <com.starbucks.id.controller.extension.extendedView.CustomTextView
        android:id="@+id/txtSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Enter your old passcode"
        android:textColor="@color/greenPrimary"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/EPC1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>
