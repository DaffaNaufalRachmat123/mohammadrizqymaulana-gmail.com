<resources>
    <!-- Base application theme. -->
    <style name="MyMaterialTheme.base" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/greenPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:textViewStyle">@style/SodoSansTextViewReguler</item>
        <item name="android:buttonStyle">@style/SodoSansButtonStyle</item>
    </style>

    <style name="SodoSansTextViewReguler" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sodosans_narrow_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_dop</item>
    </style>

    <style name="SodoSansTextViewBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sodosans_narrow_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_dop</item>
    </style>

    <style name="SodoSansTextViewItalic" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sodosans_narrow_italic</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black_dop</item>
    </style>

    <style name="SodoSansButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/sodosans_narrow_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/base_btn_black</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/greenAccent</item>
        <item name="tabSelectedTextColor">@color/greenAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/CustomTab</item>
    </style>

    <style name="CustomTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sodosans_narrow_regular</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="ProgressBarPrimary" parent="android:Widget.ProgressBar.Horizontal">
        <!--<item name="android:indeterminateOnly">false</item>-->
        <item name="android:progressDrawable">@drawable/progress_bar_custom_gold</item>
        <item name="android:minHeight">100dip</item>
        <item name="android:maxHeight">200dip</item>
    </style>
    <style name="MyDatePickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/calendar_color</item>
    </style>
</resources>
